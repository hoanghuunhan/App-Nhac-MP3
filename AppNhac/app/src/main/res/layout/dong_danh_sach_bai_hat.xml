<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_margin="5dp"
    android:elevation="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_danhsach_index"
            android:text="1"
            android:textSize="20sp"
            android:layout_margin="15dp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_tenbaihat"
            android:text="@string/app_name"
            android:layout_toRightOf="@id/tv_danhsach_index"
            android:textColor="@color/black"
            android:singleLine="true"
            android:textSize="20sp"
            android:maxWidth="250dp"
            android:ellipsize="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_tencasi"
            android:layout_below="@id/tv_tenbaihat"
            android:layout_toRightOf="@id/tv_danhsach_index"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:text="@string/app_name"
            android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/iv_luotthich_danhsach"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:src="@drawable/iconlove" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>